@model IEnumerable<PEMO_DATA_BANKING.Models.Association>

@{
    ViewBag.Title = "Index";
}

<h2>Associations</h2>

<p>
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#createModal">Create New</button>
</p>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body table-responsive p-0" style="height: 550px;">
                <table class="table table-head-fixed text-nowrap">
                    <thead>
                        <tr>
                            <th>Association Name</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Association_name)</td>
                                <td>
                                    <button type="button" class="btn btn-sm btn-info" data-toggle="modal" data-target="#editModal_@item.Association_id">Edit</button>
                                    <button type="button" class="btn btn-sm btn-danger" data-toggle="modal" data-target="#deleteModal_@item.Association_id">Delete</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Create Modal -->
<div class="modal fade" id="createModal" tabindex="-1" role="dialog" aria-labelledby="createModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createModalLabel">Create New Association</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form action="@Url.Action("Create")" method="post">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="AssociationName">Association Name</label>
                        <input type="text" class="form-control" id="AssociationName" name="AssociationName" placeholder="Enter Association Name" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
                @Html.AntiForgeryToken()
            </form>
        </div>
    </div>
</div>
<!-- /.modal -->

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    function showModal(url) {
        $.get(url, function (data) {
            $('#modalContent').html(data);
            $('#modalDialog').modal('show');
        });
    }

    $(document).on('submit', '#createForm, #editForm, #deleteForm', function (e) {
        e.preventDefault();
        var $form = $(this);
        $.post($form.attr('action'), $form.serialize())
            .done(function (result) {
                if (result.success) {
                    $('#modalDialog').modal('hide');
                    location.reload(); // Reload the page to see the changes
                } else {
                    $('#modalContent').html(result); // Reload modal content with validation errors
                }
            })
            .fail(function () {
                alert('Error while processing form');
            });
    });

    $(document).on('click', '#cancelButton', function () {
        $('#createForm, #editForm, #deleteForm')[0].reset(); // Reset the form
        $('#modalDialog').modal('hide'); // Hide the modal
    });
</script>

<!-- Add this modal HTML at the bottom of your Index.cshtml view -->
<!-- Bootstrap Modal for Error Message -->
<div class="modal fade" id="errorModal" tabindex="-1" role="dialog" aria-labelledby="errorModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="errorModalLabel">Error</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Data already exists.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
    $(document).ready(function() {
        var errorMessage = '@TempData["ErrorMessage"]';
        if (errorMessage) {
            $('#errorModal').modal('show');
        }
    });
    </script>
}

@foreach (var item in Model)
{
    <!-- Edit Modal -->
    <div class="modal fade" id="editModal_@item.Association_id" tabindex="-1" role="dialog" aria-labelledby="editModalLabel_@item.Association_id" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editModalLabel_@item.Association_id">Edit Association</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form action="@Url.Action("Edit", new { id = item.Association_id })" method="post">
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="AssociationNameEdit">Association Name</label>
                            <input type="text" class="form-control" id="AssociationNameEdit" name="AssociationName" value="@item.Association_name" required>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                    @Html.AntiForgeryToken()
                </form>
            </div>
        </div>
    </div>

@if (TempData["EditSuccess"] != null && (bool)TempData["EditSuccess"])
{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#successModal').modal('show');
        });
    </script>
}



<!-- Include the success modal -->
<div class="modal fade" id="successModal" tabindex="-1" role="dialog" aria-labelledby="successModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="successModalLabel">Success</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Edit Save successfully
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
    <!-- Delete Modal -->
    <div class="modal fade" id="deleteModal_@item.Association_id" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel_@item.Association_id" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel_@item.Association_id">Delete Association</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form action="@Url.Action("Delete", new { id = item.Association_id })" method="post">
                    <div class="modal-body">
                        <p>Are you sure you want to delete this association: <strong>@item.Association_name</strong>?</p>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-danger">Delete</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                    @Html.AntiForgeryToken()
                </form>
            </div>
        </div>
    </div>
}
