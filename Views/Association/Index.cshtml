@model IEnumerable<PEMO_DATA_BANKING.Models.Association>

@{
    ViewBag.Title = "Associations";
}

<h2>Associations</h2>

<p>
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#insertdata">Create New</button>
</p>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body table-responsive p-0" style="height: 550px;">
                <table class="table table-head-fixed text-nowrap">
                    <thead>
                        <tr>
                            <th>Association Name</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Association_name)</td>
                                <td>
                                    <button type="button" class="btn btn-info" data-bs-toggle="modal" data-bs-target="#editModal" data-id="@item.Association_id" data-name="@item.Association_name">Edit</button>
                                    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal" data-id="@item.Association_id">Delete</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                

<!-- Insert Modal -->
<div class="modal fade" id="insertdata" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="insertdataLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title fs-5" id="insertdataLabel">Association</h3>
            </div>
            <form action="@Url.Action("Create")" method="post">
                <div class="modal-body">
                    <div class="form-group mb-3">
                        <label for="Association_name">Association Name</label>
                        <input type="text" class="form-control" id="Association_name" name="Association_name" placeholder="Enter Association Name" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Create</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
                @Html.AntiForgeryToken()
            </form>
        </div>
    </div>
</div>

