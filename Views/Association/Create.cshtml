@model PEMO_DATA_BANKING.Models.Association
@{
    ViewBag.Title = "Create";
}

<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Association Form</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <div class="card-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group row">
                @Html.LabelFor(model => model.Association_name, htmlAttributes: new { @class = "col-sm-4 col-form-label" })
                <div class="col-sm-12">
                    @Html.EditorFor(model => model.Association_name, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                    @Html.ValidationMessageFor(model => model.Association_name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-12">
                    <div class="float-right">
                        <input type="submit" value="Create" class="btn btn-primary mr-2" />
                        <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
                    </div>
                </div>
            </div>
        }
    </div>
    <!-- /.card-body -->
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
