@model PEMO_DATA_BANKING.Models.Miner

<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Edit Miner</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="card-body">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Miner_id)

            <div class="form-group row">
                @Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "col-sm-4 col-form-label" })
                <div class="col-sm-8">
                    @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                    @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.MiddleName, htmlAttributes: new { @class = "col-sm-4 col-form-label" })
                <div class="col-sm-8">
                    @Html.EditorFor(model => model.MiddleName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.MiddleName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.LastName, htmlAttributes: new { @class = "col-sm-4 col-form-label" })
                <div class="col-sm-8">
                    @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                    @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.Association_id, "Association", htmlAttributes: new { @class = "col-sm-4 col-form-label" })
                <div class="col-sm-8">
                    @Html.DropDownList("Association_id", null, htmlAttributes: new { @class = "form-control", @required = "required" })
                    @Html.ValidationMessageFor(model => model.Association_id, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.Longitude, htmlAttributes: new { @class = "col-sm-4 col-form-label" })
                <div class="col-sm-8">
                    @Html.EditorFor(model => model.Longitude, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                    @Html.ValidationMessageFor(model => model.Longitude, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.Latitude, htmlAttributes: new { @class = "col-sm-4 col-form-label" })
                <div class="col-sm-8">
                    @Html.EditorFor(model => model.Latitude, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                    @Html.ValidationMessageFor(model => model.Latitude, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-12">
                    <div class="float-right">
                        <input type="submit" value="Save" class="btn btn-primary mr-2" />
                        <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.card-body -->
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

