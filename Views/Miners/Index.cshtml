@model IEnumerable<PEMO_DATA_BANKING.Models.Miner>

@{
    ViewBag.Title = "Index";
}

<h2>Miners</h2>

<p>
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#createModal">Create New</button>
</p>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body table-responsive p-0" style="height: 550px;">
                <table class="table table-head-fixed text-nowrap">
                    <thead>
                        <tr>
                            <th>First Name</th>
                            <th>Middle Name</th>
                            <th>Last Name</th>
                            <th>Longitude</th>
                            <th>Latitude</th>
                            <th>Association</th>
                            <th class="sticky-col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                                <td>@Html.DisplayFor(modelItem => item.MiddleName)</td>
                                <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                                <td>@Html.DisplayFor(modelItem => item.Longitude)</td>
                                <td>@Html.DisplayFor(modelItem => item.Latitude)</td>
                                <td>@Html.DisplayFor(modelItem => item.Association.Association_name)</td>
                                <td class="sticky-col">
                                    <button type="button" class="btn btn-info" data-toggle="modal" data-target="#editModal_@item.Miner_id">Edit</button>
                                    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#deleteModal_@item.Miner_id">Delete</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<style>
    .sticky-col {
        position: -webkit-sticky; /* for Safari */
        position: sticky;
        right: -2px;
        background-color: #fff;
        z-index: 1; /* Ensure it is above other rows */
    }

    /* Ensuring the action column stays on top of other cells when scrolled */
    tbody .sticky-col {
        z-index: 2;
    }
</style>

<!-- Create Modal -->
<div class="modal fade" id="createModal" tabindex="-1" role="dialog" aria-labelledby="createModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createModalLabel">Create New Miner</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form action="@Url.Action("Create")" method="post">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="FirstName">First Name</label>
                        <input type="text" class="form-control" id="FirstName" name="FirstName" placeholder="Enter First Name" required>
                    </div>
                    <div class="form-group">
                        <label for="MiddleName">Middle Name</label>
                        <input type="text" class="form-control" id="MiddleName" name="MiddleName" placeholder="Enter Middle Name">
                    </div>
                    <div class="form-group">
                        <label for="LastName">Last Name</label>
                        <input type="text" class="form-control" id="LastName" name="LastName" placeholder="Enter Last Name" required>
                    </div>
                    <div class="form-group">
                        <label for="Longitude">Longitude</label>
                        <input type="text" class="form-control" id="Longitude" name="Longitude" placeholder="Enter Longitude">
                    </div>
                    <div class="form-group">
                        <label for="Latitude">Latitude</label>
                        <input type="text" class="form-control" id="Latitude" name="Latitude" placeholder="Enter Latitude">
                    </div>
                    <div class="form-group">
                        <label for="Association">Association</label>
                        <select class="form-control" id="Association" name="Association">
                            <option value="1">Association 1</option>
                            <option value="2">Association 2</option>
                            <option value="3">Association 3</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
                @Html.AntiForgeryToken()
            </form>
        </div>
    </div>
</div>

@foreach (var item in Model)
{
    <!-- Edit Modal -->
    <div class="modal fade" id="editModal_@item.Miner_id" tabindex="-1" role="dialog" aria-labelledby="editModalLabel_@item.Miner_id" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editModalLabel_@item.Miner_id">Edit Miner</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form action="@Url.Action("Edit", new { id = item.Miner_id })" method="post">
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="FirstName">First Name</label>
                            <input type="text" class="form-control" id="FirstName" name="FirstName" value="@item.FirstName" required>
                        </div>
                        <div class="form-group">
                            <label for="MiddleName">Middle Name</label>
                            <input type="text" class="form-control" id="MiddleName" name="MiddleName" value="@item.MiddleName">
                        </div>
                        <div class="form-group">
                            <label for="LastName">Last Name</label>
                            <input type="text" class="form-control" id="LastName" name="LastName" value="@item.LastName" required>
                        </div>
                        <div class="form-group">
                            <label for="Longitude">Longitude</label>
                            <input type="text" class="form-control" id="Longitude" name="Longitude" value="@item.Longitude">
                        </div>
                        <div class="form-group">
                            <label for="Latitude">Latitude</label>
                            <input type="text" class="form-control" id="Latitude" name="Latitude" value="@item.Latitude">
                        </div>
                        <div class="form-group">
                            <label for="Association">Association</label>
                            <select class="form-control" id="Association" name="Association">
                                <option value="1" @(item.Association_id == 1 ? "selected" : "")>Association 1</option>
                                <option value="2" @(item.Association_id == 2 ? "selected" : "")>Association 2</option>
                                <option value="3" @(item.Association_id == 3 ? "selected" : "")>Association 3</option>
                            </select>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                    @Html.HiddenFor(model => item.Miner_id)
                    @Html.AntiForgeryToken()
                </form>
            </div>
        </div>
    </div>

    <!-- Delete Modal -->
    <div class="modal fade" id="deleteModal_@item.Miner_id" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel_@item.Miner_id" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel_@item.Miner_id">Delete Miner</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form action="@Url.Action("Delete", new { id = item.Miner_id })" method="post">
                    <div class="modal-body">
                        <p>Are you sure you want to delete this miner: <strong>@item.FirstName @item.LastName</strong>?</p>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-danger">Delete</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                    @Html.AntiForgeryToken()
                </form>
            </div>
        </div>
    </div>
}
