<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>AdminLTE 3 | Top Navigation + Sidebar</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.0/font/bootstrap-icons.min.css">
    <link href="~/Content/plugins/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <link href="~/Content/dist/css/adminlte.min.css" rel="stylesheet" />
</head>
<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="~/home/index" class="nav-link">Home</a>
                </li>
            </ul>
            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">
                <!-- Navbar Search -->
                <li class="nav-item">
                    <a class="nav-link" data-widget="fullscreen" href="#" role="button">
                        <i class="fas fa-expand-arrows-alt"></i>
                    </a>
                </li>
            </ul>
        </nav>
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <div class="text-center">
                <a href="~/home/index" class="brand-link d-flex align-items-center justify-content-center">
                    <img src="~/Content/dist/img/PEMOicon.png" width="50" class="nav-icon" />
                    <p style="margin: 0 0 0 10px; font-weight: bold; font-size:30px">PEMO</p>
                </a>
            </div>
            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" style="font-size:20px;" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-header" style="font-size:17px;">PROFILES</li>
                        @if (ViewBag.Profile == "Home")
                        {
                            <li class="nav-item">
                                <a href="/miners" class="nav-link">
                                    <i class="nav-icon bi-minecart-loaded"></i>
                                    <p>Miners</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="/operators" class="nav-link">
                                    <i class="nav-icon bi bi-truck"></i>
                                    <p>Operators</p>
                                </a>
                            </li>
                        }

                        @if (ViewBag.Profile == "Miner")
                        {
                            <li class="nav-item">
                                <a href="/miners" class="nav-link active">
                                    <i class="nav-icon bi-minecart-loaded"></i>
                                    <p>Miners</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="/operators" class="nav-link">
                                    <i class="nav-icon bi bi-truck"></i>
                                    <p>Operators</p>
                                </a>
                            </li>
                        }
                        @if (ViewBag.Profile == "Operator")
                        {
                            <li class="nav-item">
                                <a href="/miners" class="nav-link">
                                    <i class="nav-icon bi-minecart-loaded"></i>
                                    <p>Miners</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="/operators" class="nav-link active">
                                    <i class="nav-icon bi bi-truck"></i>
                                    <p>Operators</p>
                                </a>
                            </li>
                        }

                    </ul>
                </nav>
            </div>
        </aside>
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Main content -->
            <div class="content">
                <div class="container">
                    @RenderBody()
                </div>
            </div>
        </div>
        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
        </aside>
    </div>
    <!-- REQUIRED SCRIPTS -->
    <script src="~/Content/plugins/jquery/jquery.min.js"></script>
    <script src="~/Content/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/dist/js/adminlte.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
